# ============================================
# Configuración del Servidor
# ============================================
PORT=8080

# ============================================
# Configuración de Base de Datos MySQL
# ============================================
# Si estas variables están configuradas, se usará MySQL
# Si no, se usará el repositorio en memoria

# Host de MySQL (usar 'mysql' dentro de Docker, 'localhost' para desarrollo local)
DB_HOST=mysql

# Puerto de MySQL
DB_PORT=3306

# Usuario de MySQL
DB_USER=appuser

# Contraseña de MySQL
DB_PASSWORD=apppassword

# Nombre de la base de datos
DB_NAME=usersdb

# ============================================
# Configuración para Desarrollo Local
# ============================================
# Descomenta y ajusta para desarrollo local sin Docker:
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=tu_password_aqui
# DB_NAME=usersdb

# ============================================
# Configuración de Entorno
# ============================================
# ENV=development
# LOG_LEVEL=info

